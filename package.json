{
  "name": "fullstack-portfolio",
  "version": "1.0.0",
  "description": "Full-stack portfolio application with React frontend and .NET backend",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && pnpm run dev --host",
    "start:server": "cd server/PortfolioAPI && dotnet run",
    "build": "npm run build:client",
    "build:client": "cd client && pnpm run build",
    "install:all": "cd client && pnpm install && cd ../server/PortfolioAPI && dotnet restore",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "portfolio",
    "fullstack",
    "react",
    "dotnet",
    "typescript"
  ],
  "author": "Portfolio Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

